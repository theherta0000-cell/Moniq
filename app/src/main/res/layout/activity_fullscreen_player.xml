<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">

    <!-- Top App Bar with Close Button -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:title="" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Large centered artwork with rounded corners -->
            <FrameLayout
            android:id="@+id/artFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/full_art"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Cover art" />

                <!-- subtle vignette overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_vignette"
                    android:clickable="false" />

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

        <!-- Title and artist -->
        <TextView
            android:id="@+id/full_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Track Title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/artFrame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/full_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#D0D0D0"
            app:layout_constraintTop_toBottomOf="@id/full_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- interactive progress slider (thin appearance) -->
        <com.google.android.material.slider.Slider
            android:id="@+id/progressSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/full_artist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="14dp"
            android:valueFrom="0"
            android:valueTo="100"
            android:value="0"
            app:thumbTint="@android:color/white"
            app:trackTint="@color/purple_500"
            app:haloRadius="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/progressSlider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/full_current_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="0:00"
                android:textAppearance="?attr/textAppearanceCaption" />

            <TextView
                android:id="@+id/full_total_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="0:00"
                android:textAppearance="?attr/textAppearanceCaption" />

        </LinearLayout>

        <!-- Big playback controls -->
        <LinearLayout
            android:id="@+id/playControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/progressSlider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/full_prev"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_previous"
                android:backgroundTint="#202020"
                android:background="@drawable/circle_transparent"
                android:tint="@android:color/white"
                android:contentDescription="Previous" />

            <ImageButton
                android:id="@+id/full_play_pause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@android:drawable/ic_media_play"
                android:background="@drawable/circle_accent"
                android:tint="@android:color/white"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:contentDescription="Play/Pause" />

            <ImageButton
                android:id="@+id/full_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_next"
                android:background="@drawable/circle_transparent"
                android:tint="@android:color/white"
                android:contentDescription="Next" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btmActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/playControls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/full_toggle_lyrics"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lyrics"
                android:checkable="true"
                android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/full_download"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    app:icon="@android:drawable/stat_sys_download"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/full_queue"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Queue"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/full_stop"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel" />

        </LinearLayout>

        <!-- Fullscreen lyrics overlay (initially hidden). LyricsView will render centered large text -->
        <FrameLayout
            android:id="@+id/full_lyrics_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:background="#CC000000">

            <FrameLayout
                android:id="@+id/full_lyrics_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:padding="28dp"
                android:background="@drawable/rounded_translucent">

                <com.example.moniq.views.LyricsView
                    android:id="@+id/full_lyrics_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

            </FrameLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>