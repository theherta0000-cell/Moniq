<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="56dp">

        <TextView
            android:id="@+id/settings_speed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed: 1.00x"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/settings_speed_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="50"
            android:valueTo="200"
            android:stepSize="1"
            android:thumbTint="@color/purple_500" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Note: pitch will change automatically with speed." />

        <TextView
            android:id="@+id/settings_download_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Download directory" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/settings_download_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Default"
                android:ellipsize="end"
                android:maxLines="1" />

            <Button
                android:id="@+id/settings_choose_download_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose" />

        </LinearLayout>

        <Button
            android:id="@+id/settings_disconnect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Disconnect" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>