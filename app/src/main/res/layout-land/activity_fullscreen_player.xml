<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Animated gradient background -->
    <com.example.moniq.views.GradientBackgroundView
        android:id="@+id/gradient_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Main player content - LANDSCAPE -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Close button in top left -->
        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="Close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp" />

        <!-- View Artist and Album buttons in top right -->
        <LinearLayout
            android:id="@+id/top_right_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/view_artist_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                android:contentDescription="View artist"
                android:layout_marginEnd="4dp" />

            <ImageButton
                android:id="@+id/view_album_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                android:contentDescription="View album" />

        </LinearLayout>

        <!-- Album art on left side -->
        <com.google.android.material.card.MaterialCardView
    android:id="@+id/artCard"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent="0.45"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_margin="24dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/full_art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Cover art" />

    <ProgressBar
        android:id="@+id/fullLoading"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true" />

</com.google.android.material.card.MaterialCardView>

        <!-- Right side controls container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/artCard"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/full_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Track Title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.25"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Artist -->
            <TextView
                android:id="@+id/full_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#D0D0D0"
                app:layout_constraintTop_toBottomOf="@id/full_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Quality -->
            <TextView
                android:id="@+id/full_quality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="320 kbps"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/full_artist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

            <!-- Progress slider -->
            <com.google.android.material.slider.Slider
                android:id="@+id/progressSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/full_quality"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:valueFrom="0"
                android:valueTo="100"
                android:value="0"
                app:thumbTint="@android:color/white"
                app:trackTint="@color/purple_500"
                app:haloRadius="0dp" />

            <!-- Time labels -->
            <LinearLayout
                android:id="@+id/time_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/progressSlider"
                app:layout_constraintStart_toStartOf="@id/progressSlider"
                app:layout_constraintEnd_toEndOf="@id/progressSlider"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/full_current_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="0:00"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/full_total_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="0:00"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.7" />

            </LinearLayout>

            <!-- Playback controls -->
            <LinearLayout
                android:id="@+id/playControls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/time_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/full_prev"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="@drawable/circle_transparent"
                    android:tint="@android:color/white"
                    android:contentDescription="Previous" />

                <ImageButton
                    android:id="@+id/full_play_pause"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_media_play"
                    android:background="@drawable/circle_accent"
                    android:tint="@android:color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="Play/Pause" />

                <ImageButton
                    android:id="@+id/full_next"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@android:drawable/ic_media_next"
                    android:background="@drawable/circle_transparent"
                    android:tint="@android:color/white"
                    android:contentDescription="Next" />

            </LinearLayout>

            <!-- Action buttons -->
            <LinearLayout
                android:id="@+id/btmActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/playControls"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/full_toggle_lyrics"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Lyrics"
                    android:textSize="12sp"
                    android:checkable="true"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/full_download"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Download"
                    android:textSize="12sp"
                    app:icon="@android:drawable/stat_sys_download"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/full_queue"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Queue"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Hidden toolbar for compatibility -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Hidden frame for compatibility -->
        <FrameLayout
            android:id="@+id/artFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Lyrics view overlay - LANDSCAPE -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyrics_mode_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Close button top left -->
        <ImageButton
            android:id="@+id/lyrics_close_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="Close lyrics"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp" />

        <!-- Toggle buttons top right -->
        <LinearLayout
            android:id="@+id/toggle_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/lyrics_toggle_romanization"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_sort_alphabetically"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                android:contentDescription="Toggle romanization"
                android:layout_marginEnd="4dp" />

            <ImageButton
                android:id="@+id/lyrics_toggle_translation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                android:contentDescription="Toggle translation" />

        </LinearLayout>

        <!-- Left side: Album art and info -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/left_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lyrics_close_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.35"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/lyrics_art_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/lyrics_mini_art"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Album art" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/lyrics_mini_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Track Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/lyrics_art_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/lyrics_mini_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/lyrics_mini_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Right side: Lyrics -->
        <com.example.moniq.views.LyricsView
            android:id="@+id/full_lyrics_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toggle_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/left_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:visibility="visible" />

        <!-- Hidden top bar for compatibility -->
        <LinearLayout
            android:id="@+id/lyrics_top_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>